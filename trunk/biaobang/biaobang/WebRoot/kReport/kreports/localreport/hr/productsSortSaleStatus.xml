<?xml version="1.0" encoding="GB2312"?> 
<kreport>
	<name>itschemeQueryStat</name>
	<display-name>产品分类销售状况 </display-name>
	<comment><![CDATA[]]></comment>
	<page-size></page-size>
	<pageable></pageable>
	<condition-size>4</condition-size>
	<skin></skin>	
	<actions>
		<action name="crossQuery">
			<index>5</index>
			<display-name>交叉报表</display-name>
			<do>doCrossQuery()</do>
		</action>
		<action name="query">
			<index>10</index>
			<display-name>查询</display-name>
			<do>doQuery()</do>
		</action>
		<action name="export">
			<index>20</index>
			<display-name>导出</display-name>
			<do>doExportCrossTable()</do>
		</action>
		<action name="reset">
			<index>100</index>
			<display-name>重置</display-name>
			<do>doReset()</do>
		</action>
	</actions>	
	<conditions>
	
	   <!-- condition name="autoRun">
			<index>0</index>
			<display-name>自动执行</display-name>
			<type>initaction</type>
			<extend>doQuery()</extend>
		</condition>
		-->
		<condition name="date">
			<index>50</index>
			<display-name>统计年份</display-name>
			<type>date</type>
			<return-type>date</return-type>
			<defaut-value>.0H.0m.0s</defaut-value>
			<extend>yyyy</extend>
		</condition>
	</conditions>
	<cross>
		<cross-text></cross-text>
		<row-field>序号:月份</row-field>
		<col-field>分类</col-field>
		<value-field>销售金额</value-field>
		<row-count>false</row-count>
		<col-count>false</col-count>
	</cross>
	<ksql><![CDATA[
	  select 
	    MONTH(bl.tTime) 序号,
		CAST(MONTH(bl.tTime) as char(2)) 月份,
		bp.sort 分类,
		sum(bp.sum) 销售金额 from bill_of_lading bl,bill_of_particulars bp
		where bl.id = bp.ladingId

		group by MONTH(bl.tTime),bp.sort
		
		
		UNION
		
		select 
		13  序号,
		CONCAT('合计') 月份,
		
		bp.sort 分类,
		sum(bp.sum) 销售金额 from bill_of_lading bl,bill_of_particulars bp	
		where bl.id = bp.ladingId

		group by bp.sort
		
		UNION
		
		select 
		14  序号,
		CONCAT('月均')  月均,
		
		bp.sort 分类,
		avg(bp.sum) 销售金额 from bill_of_lading bl,bill_of_particulars bp		
		where bl.id = bp.ladingId

		group by bp.sort

		]]></ksql>
</kreport>