			  <value>com/eshore/inas/daolayer/mapping/PjInformation.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjMemberInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjProInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjRisksInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjRoleInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjSourceInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/PjStatusInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/RiskLevelInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/RisksRankInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/StatusInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/StatusTyepInfo.hbm.xml</value>
			  <value>com/eshore/inas/daolayer/mapping/SysMenuInfo.hbm.xml</value>
